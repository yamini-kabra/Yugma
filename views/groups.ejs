<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="http://code.jquery.com/jquery-latest.min.js"></script>
<link rel="stylesheet" href="/css/navigation.css">
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/insideGroup.css">

</head>
<body>

<div class="topnav">
  <a class="active" href="/groups">Home</a>
  <a href="/createGroup">Create Group</a>
  <a href="/joinGroup">Join Group</a>
  <a href="/logout" style="float:right">Logout</a>
  <a href="/delete" style="float:right">Delete Account</a>
</div>



<% if(clickOn === 'home'){ %>

  <div class="row">
    <div class="leftcolumn">
      <div class="card" style="overflow-y: scroll; height: 77vh;">
        <h2>GROUPS</h2>
        <% if(groups.length > 0){ %>
          <% for(let group of groups){ %>
            <div class="vertical-menu">
              <a href="groups/group/?code=<%=group.code %>"><%=group.name %></a>
        
            </div>
              <% } %>
           <% } %>
      </div>
      
    </div>
    <div class="middlecolumn" style="width: 45%;">
      <div class="card" style="overflow-y: scroll; height: 77vh;">
        <h2>EVENTS</h2>
        <%- include("./includes/events") %>
      </div>
    </div>
 
  
   <div class="rightcolumn" style="width: 30%;">
    <div class="card" style="overflow-y: scroll; height: 77vh;">
      <%- include("./includes/todo") %>
      
     
    </div>
  </div>
 <% } %>
 </div>
  </div>

<% if(clickOn === 'createGroup'){ %>
  <div style="padding-left:16px">
   
      <div class="box container">
      
        <form action="/createGroup" method="POST">
          <br /><br /><br />
          <h2>Create your own group</h2>
          <div class="login" style="margin-top: 44px">
  
            <input name="code" type="number" placeholder="Enter Group Code here" class="input" required />
           <input name="name" type="text" placeholder="Enter name of new channel" class= "input" required />
            <br>
          </div>
          <div class="signin">
            
            <button style="align-self: center;" type="submit" class="btn"> Create Group</button>

            <% if (errorMessage) { %>
              <center>
                <div style="height: 30px; color: red"><%= errorMessage %></div>
              </center>
              <% } %>
            
          </div>
          </form>
          </div>
    <% } %>
  
    <% if(clickOn === 'joinGroup'){ %>
      <div style="padding-left:16px">
       
          <div class="box container">
          
            <form action="/joinGroup" method="POST">
              <br /><br /><br /><br /><br /><br />
              <h2>Join your group</h2>
              <div class="login" style="margin-top: 44px">
      
                <input name="code" type="number" placeholder="Enter Group Code here" class="input" required />
               
                <br>
              </div>
              <div class="signin">
                
                <button style="align-self: center;" type="submit" class="btn"> Join Group</button>
                <% if (errorMessage) { %>
                  <center>
                    <div style="height: 30px; color: red"><%= errorMessage %></div>
                  </center>
                  <% } %>
              </div>
              </form>
              </div>
        <% } %>
          
</body>
</html>

